@model BookRadar.Models.BookSearchViewModel
@{
    ViewData["Title"] = "Buscar Libros";
}

<h1 class="mb-4">Buscar Libros por Autor</h1>

<form asp-action="Search" method="post" class="mb-4">
    <div class="input-group">
        <input type="text" name="author" class="form-control" placeholder="Ingrese nombre de autor..." required />
        <button type="submit" class="btn btn-primary">Buscar</button>
    </div>
</form>

@if (Model.SearchResults.Any())
{
    <h3 class="mt-4">Resultados de la Búsqueda</h3>
    <table id="tablaBusqueda" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Título</th>
                <th>Año</th>
                <th>Editorial</th>
                <th>Autor</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model.SearchResults)
            {
                <tr>
                    <td>@book.Title</td>
                    <td>@book.Year</td>
                    <td>@book.Publisher</td>
                    <td>@book.Autor</td>
                </tr>
            }
        </tbody>
    </table>
}

@section Scripts {
    <script>
        console.log(typeof jQuery); // Debe mostrar "function"
        console.log(typeof $.fn.dataTable); // Debe mostrar "function"
        $(document).ready(function () {
            $('#tablaBusqueda').DataTable({
                pageLength: 10,
                lengthMenu: [5, 10, 20],
                language: {
                    url: "//cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json"
                }
            });
        });
    </script>
}